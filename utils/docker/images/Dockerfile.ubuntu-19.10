#
# Dockerfile - a 'recipe' for Docker to build an image of ubuntu-based
#              environment prepared for running rpma tests.
#

# Pull base image
FROM ubuntu:19.10
MAINTAINER tomasz.gromadzki@intel.com

ENV DEBIAN_FRONTEND noninteractive

# Additional parameters to build docker without building components
ARG SKIP_VALGRIND_BUILD
ARG SKIP_SCRIPTS_DOWNLOAD

# Update the Apt cache and install basic tools
RUN apt-get update && apt-get dist-upgrade -y

# base deps
ENV BASE_DEPS "\
	apt-utils \
	build-essential \
	git \
	pkg-config \
	sudo \
	whois"

# Valgrind deps
ENV VALGRIND_DEPS "\
	autoconf \
	automake \
	devscripts"

# RPMA deps
ENV RPMA_DEPS "\
	cmake \
	curl \
	gawk \
	groff \
	graphviz \
	libibverbs-dev \
	librdmacm-dev \
	libunwind-dev"
#	txt2man is installed from git repo now

# Install all required packages
RUN apt-get install -y --no-install-recommends \
	$BASE_DEPS \
	$RPMA_DEPS \
	$VALGRIND_DEPS \
&& rm -rf /var/lib/apt/lists/*

# Install valgrind
COPY install-valgrind.sh install-valgrind.sh
RUN ./install-valgrind.sh

# Install cmocka
COPY install-cmocka.sh install-cmocka.sh
RUN ./install-cmocka.sh

# Install txt2man
COPY install-txt2man.sh install-txt2man.sh
RUN ./install-txt2man.sh

# Download scripts required in run-*.sh
COPY download-scripts.sh download-scripts.sh
COPY 0001-fix-generating-gcov-files-and-turn-off-verbose-log.patch 0001-fix-generating-gcov-files-and-turn-off-verbose-log.patch
RUN ./download-scripts.sh

# Add user
ENV USER user
ENV USERPASS pass
RUN useradd -m $USER -g sudo -p `mkpasswd $USERPASS`
USER $USER

# Set required environment variables
ENV OS ubuntu
ENV OS_VER 19.10
ENV PACKAGE_MANAGER deb
ENV NOTTY 1
