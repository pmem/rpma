{
    "common": {
        "server_global": [
            "[global]",
            "ioengine=librpma_apm_server",
            "create_serialize=0",
            "kb_base=1000",
            "serverip=$serverip",
            "port=7204",
            "thread"
        ],
        "server_common": [
            "direct_write_to_pmem=1",
            "size=100MiB",
            "filename=/dev/dax/path # for Device Dax",
            "filename_format=/mnt/pmem/file # for Filesystem DAX"
        ],
        "client_global": [
            "[global]",
            "ioengine=librpma_apm_client",
            "create_serialize=0",
            "serverip=$serverip",
            "port=7204",
            "thread",
            "disable_clat=1",
            "lat_percentiles=1",
            "percentile_list=99.0:99.9:99.99:99.999"
        ],
        "client_common": [
            "readwrite={read, write, rw, randread, randwrite, randrw}",
            "rwmixread=70 # valid only for the 'rw' and 'randrw' readwrite modes",
            "blocksize=$blocksize",
            "ramp_time=15",
            "time_based",
            "runtime=60"
        ]
    },
    "config": {
        "lat": {
            "type": "kvtable",
            "Server - FIO engine configuration": [
                "{server_global}",
                "",
                "[server]",
                "numjobs=1",
                "{server_common}"
            ],
            "Client - FIO engine configuration": [
                "{client_global}",
                "",
                "[client]",
                "sync=1",
                "{client_common}"
            ]
        },
        "bw": {
            "type": "kvtable",
            "Server - FIO engine configuration": [
                "{server_global}",
                "",
                "[server]",
                "numjobs=$numjobs",
                "{server_common}"
            ],
            "Client - FIO engine configuration": [
                "{client_global}",
                "",
                "[client]",
                "numjobs=$numjobs",
                "group_reporting=1",
                "iodepth=2",
                "{client_common}"
            ]
        }
    }
}
